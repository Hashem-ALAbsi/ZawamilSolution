@section Scripts {
    <script>
        function sendquestion(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Do You want this ?',
                icon: 'question',
                showCancelButton: true,

            }).then(resulte => {
                if (resulte.isConfirmed) {
                    const myForm =  document.getElementById('myForm');
                    myForm.submit();
                }
            })
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
