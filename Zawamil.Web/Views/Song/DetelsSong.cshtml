@using Zawamil.Web.Models.Songes.Dtos
@using Zawamil.Web.Utility
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "DetelsSong";
}

@model SongModel

<h1>Details</h1>
<form asp-action="DetelsSong">
    <div>
        <h4>DetelsSong</h4>
        <input asp-for="id" hidden />
        <hr />
        <dl class="row">
            <div class="col-md-4">
                <dd class="col-sm-10">
                    <input asp-for="id" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <input asp-for="Name" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <input asp-for="Description" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <input asp-for="CreatedAt" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <audio controls>
                        <source src="@(SD.BaseUrl)@(Model.SongUrl)" type="audio/mpeg" />
                    </audio>
                </dd>
            </div>
        </dl>
    </div>
</form>
<div class="form-group">
   
    <a onclick="activateSong('@Model.id','DeleteSong')" class="btn btn-outline-danger">
        Delete Song
    </a>
</div>
<div class="form-group">
    <a asp-action="SongIndex">Back to List</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function activateSong(songId, url) {
            Swal.fire({
                title: 'Do You want this ?',
                icon: 'question',
                showCancelButton: true,
            }).then(result => {
                if (result.isConfirmed) {
                    window.location.href = '/Song/' + url + '?id=' + songId;
                }
            });
        }
        function sendquestion(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Do You want this ?',
                icon: 'question',
                showCancelButton: true,

            }).then(resulte => {
                if (resulte.isConfirmed) {
                    const myForm = document.getElementById('myForm');
                    myForm.submit();
                }
            })
        }
    </script>
}

