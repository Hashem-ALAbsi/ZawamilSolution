@{
    ViewData["Title"] =  "Login";
}

<h1> @ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]" >
            <div asp-validation-summary="ModelOnly" class="text-danger">>
            </div>
            <div class="form-group">
                <label class="control-label pt-2" style="font-size:20px;">User Name</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label pt-2" style="font-size:20px;">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["Title"]" class="btn btn-outline-primary form-control" />
            </div>
            <div class="form-group">
                <a asp-action="Deletecookies">Back to List</a>
            </div>
        </form>
    </div>
</div>


