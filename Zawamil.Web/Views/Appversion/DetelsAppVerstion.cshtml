@{
    ViewData["Title"] = "DetelsAppVerstion";
}
@model AppVersion

<h1>Details</h1>
<form asp-action="DetelsAppVerstion">
    <div>
        <h4>DetelsAppVerstion</h4>
        <input asp-for="Id" hidden />
        <hr />
        <dl class="row">
            <div class="col-md-4">
                <dd class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <input asp-for="Name" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <input asp-for="CreateAt" disabled class="form-control" />
                </dd>
                <dd class="col-sm-10">
                    <input asp-for="IsList" disabled class="form-control" />
                </dd>
            </div>
        </dl>
    </div>
</form>
<div class="form-group">
    <a onclick="activateUser('@Model.Id','DeletedAppverstion')" class="btn btn-outline-danger">
        Deleted
    </a>
</div>
<div class="form-group">
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function activateUser(Id, url) {
            Swal.fire({
                title: 'Do You want this ?',
                icon: 'question',
                showCancelButton: true,
            }).then(result => {
                if (result.isConfirmed) {
                    window.location.href = '/Appversion/' + url + '?id=' + Id;
                }
            });
        }
        
    </script>
}
